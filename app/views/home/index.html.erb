<div class="container">
<h1 class="display-4">충북대나무숲</h1>
<!--<h3 class="text-right">ㅡ개복이</h3>-->

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">번호</th>
                <th scope="col">내용</th>
                <th scope="col">시간</th>
            </tr>
        </thead>
        <tbody>
            <% @asdf.reverse_each do |gggg| %>
                <tr scope="col"> 
                    <td><%= gggg.id %></td>
                    <td><%= gggg.content %></td>
                    <td><%= gggg.created_at.hour.to_s.rjust(2, '0') %>:<%= gggg.created_at.min.to_s.rjust(2, '0') %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    
